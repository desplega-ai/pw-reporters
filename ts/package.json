{
  "name": "@desplega.ai/playwright-reporter",
  "version": "0.1.0",
  "description": "JSON serialization layer for Playwright reporter types",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun build lib/src/index.ts --outdir dist --target node && tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "test": "bun test lib/src/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pw:test": "playwright test",
    "pw:test:ui": "playwright test --ui",
    "pw:test:headed": "playwright test --headed"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/bun": "latest",
    "bun-types": "^1.3.4",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "lib/src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  }
}
